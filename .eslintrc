{
  "extends" : [
    "standard"
  ],
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "no-console": 2,
    "camelcase": 0,
    "generator-star-spacing": 1,
    "no-unused-vars": 0
  },
  "globals": {
    "jest": true,
    "expect": true,
    "mockFn": true,
    "config": true,
    "afterEach": true,
    "beforeEach": true,
    "describe": true,
    "context": true,
    "it": true,
    "pit": true,
    "require": true,
    "xdescribe": true,
    "xit": true
  }
}
